{
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.formatOnSave": false,
    "[lua]": {
        "editor.defaultFormatter": "tangzx.emmylua"
    },
    "editor.wordWrap": "on",
    "files.exclude": {
        ".idea": true,
        ".vs": true,
        "*.sln": true,
        "*.vsconfig": true,
        "*.user": true,
        "Binaries": true,
        "Build": true,
        "DerivedDataCache": true,
        "Intermediate/[!P]*": true,
        "Intermediate/P[!y]*": true,
        "LICENSE": true,
        "Plugins/**/Binaries": true,
        "Plugins/**/Intermediate": true,
        "Plugins/**/ThirdParty/[!U]**": true,
        "Plugins/**/ThirdParty/UnLuaExtensions" : true,
        "Saved/": true,
        "Content/[!SP]*": true,
        "Content/S[!c]*": true,
        "Content/P[!y]*": true,
        "Content/Python/__pycache__": true,
    },
    "files.readonlyInclude": {
        "IntelliSense/**": true,
        "Intermediate/**": true,
        "Plugins/**": true,
    },
    "search.exclude": {
        "Plugins/": true,
        "Content/**/*.uasset": true,
        "*.exe": true,
    },
    "search.useIgnoreFiles": false,
    "formatFiles.extensionsToInclude": "lua",
    "files.eol": "\n",
    "ue-python.environment.addWorkspaceToPath": true,
    "ue-python.remote.multicastBindAddress": "0.0.0.0",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/Intermediate/PythonStub"
    ],
}